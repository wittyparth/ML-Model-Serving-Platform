# Application Settings
DEBUG=True
PROJECT_NAME=ML Model Serving Platform
VERSION=1.0.0

# API Settings
API_V1_PREFIX=/api/v1

# Security (Development only - CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production-12345678
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (matches docker-compose.yml)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ml_platform
DATABASE_ECHO=False

# Redis (matches docker-compose.yml)
REDIS_URL=redis://redis:6379/0
CACHE_TTL_SECONDS=3600

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Upload
MAX_UPLOAD_SIZE_MB=100
UPLOAD_DIR=models
ALLOWED_MODEL_TYPES=sklearn

# Model Settings
MODEL_CACHE_SIZE=5
